#include<stdio.h>
int main()
{
int i,j,n;
printf("Enter the number of rows for the triangle: ");
scanf("%d",n);
for(i=0;i<=n;i++) //checking the loop that the i is equal to 0 or <=n and incrementing the i value by 1.
{
for(j=0;j<=i;j++)  //checking the loop that the j is equal to 0 or <=i and incrementing the value by 1.
{
printf("01");
}
printf("\n");
}
return 0;
}
